<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Features.Presentation.Screens.EventsActivity"
    tools:showIn="@layout/activity_scrolling"
>

    <GridLayout
        android:id="@+id/day_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="2"
        android:paddingTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
    >
        <RelativeLayout
            android:id="@+id/day_header_01"
            android:layout_width="0dp"
            android:layout_columnWeight="2"
            android:textAlignment="center"
        >
            <TextView
                android:id="@+id/day_header_weekday_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seg"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
            />
            <TextView
                android:id="@+id/day_header_day_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="08/05"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_below="@id/day_header_weekday_01"
                android:textSize="20dp"
            />
        </RelativeLayout>
        <ListView
            android:id="@+id/event_list_day_01"
            android:layout_width="0dp"
            android:layout_columnWeight="8"
            tools:listitem="@layout/event_list_item"
        />
    </GridLayout>
</androidx.core.widget.NestedScrollView>