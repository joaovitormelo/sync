<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Features.Presentation.Screens.Task">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teste da API Rubeus"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black" />

            <!-- Status da conexão -->
            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carregando..."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:textColor="@android:color/black" />

            <!-- Lista de contatos -->
            <TextView
                android:id="@+id/textViewContactsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contatos Encontrados:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:visibility="gone" />

            <!-- Informações de erro -->
            <TextView
                android:id="@+id/textViewError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="#FFEBEE"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone" />

            <!-- Botões -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnVoltar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voltar"
                    android:layout_marginEnd="16dp"
                    android:onClick="voltarParaCreateTask" />

                <Button
                    android:id="@+id/btnTestarNovamente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Testar Novamente"
                    android:onClick="testarNovamente" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>