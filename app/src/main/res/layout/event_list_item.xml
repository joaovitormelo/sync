<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <androidx.cardview.widget.CardView
        android:id="@+id/eventItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/blue"
    >
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
        >
            <RelativeLayout
                android:id="@+id/eventListHeader"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
            >
                <TextView
                    android:id="@+id/eventlistName"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="Evento 1"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                />
                <TextView
                    android:id="@+id/eventListTime"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="08:00 - 09:00"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_below="@id/eventlistName"
                />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
            >
                <androidx.cardview.widget.CardView
                    android:id="@+id/rubeusIconWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="20dp"
                >
                    <ImageView
                        android:id="@+id/rubeusIcon"
                        android:layout_width="@dimen/sync_icon_size"
                        android:layout_height="@dimen/sync_icon_size"
                        android:src="@drawable/rubeus"
                        android:layout_margin="5dp"
                    />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/googleIconWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="20dp"
                    android:layout_toRightOf="@id/rubeusIconWrapper"
                    android:layout_marginStart="10dp"
                >
                    <ImageView
                        android:id="@+id/googleIcon"
                        android:layout_width="@dimen/sync_icon_size"
                        android:layout_height="@dimen/sync_icon_size"
                        android:src="@drawable/google"
                        android:layout_margin="5dp"
                    />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </GridLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>