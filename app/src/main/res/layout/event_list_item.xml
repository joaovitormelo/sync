<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/eventItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eventlistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Event"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eventListTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/hours"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Linha 1: Ícones -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/rubeusIconWrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardElevation="4dp">

                        <ImageView
                            android:id="@+id/rubeusIcon"
                            android:layout_width="@dimen/sync_icon_size"
                            android:layout_height="@dimen/sync_icon_size"
                            android:layout_margin="5dp"
                            android:src="@drawable/rubeus" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/googleIconWrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardElevation="4dp">

                        <ImageView
                            android:id="@+id/googleIcon"
                            android:layout_width="@dimen/sync_icon_size"
                            android:layout_height="@dimen/sync_icon_size"
                            android:layout_margin="5dp"
                            android:src="@drawable/google" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button1"
                        android:layout_width="@dimen/mini_button_size"
                        android:layout_height="@dimen/mini_button_size"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_red"
                        android:drawableStart="@drawable/edit_calendar"
                        android:drawablePadding="4dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button2"
                        android:layout_width="@dimen/mini_button_size"
                        android:layout_height="@dimen/mini_button_size"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_red"
                        android:drawableStart="@drawable/delete"
                        android:drawablePadding="4dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />




                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
