<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:id="@+id/eventDayItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="1"
    android:columnCount="2"
    android:paddingTop="20dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:id="@+id/day_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="2"
        android:textAlignment="center"
        android:background="@color/bege">
        >
        <TextView
            android:id="@+id/day_header_weekday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seg"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/day_header_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08/05"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/day_header_weekday"
            android:textSize="18dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="8"
        >
        <ListView
            android:id="@+id/eventModelList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/event_list_item"
            />
    </RelativeLayout>
</GridLayout>