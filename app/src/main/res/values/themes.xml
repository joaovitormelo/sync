    <style name="Base.Theme.Sync" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Estou tentando forçar a barra para ele não mudar as minhas cores no tema escuro  -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="Theme.Sync" parent="Base.Theme.Sync" />

    <style name="NoMaterialTint" parent="">
        <item name="android:backgroundTint">@null</item>
        <item name="colorButtonNormal">@android:color/transparent</item>
