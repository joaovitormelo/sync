<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Sync" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Impede alteração automática das cores no modo escuro -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>

        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/green</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/green</item>
        <item name="colorOnSecondaryContainer">@color/white</item>


        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/green</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/green</item>

        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>
